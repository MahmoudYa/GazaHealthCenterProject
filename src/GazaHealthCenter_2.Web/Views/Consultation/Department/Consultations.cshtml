@using GazaHealthCenter_2.Objects.Models.Consultation
@model List<ConsultationRequestModel>

<div class="container mt-4">
    <h2 class="mb-4">Consultations in @ViewBag.DepartmentName</h2>

    <a asp-action="CreateConsultation" asp-route-departmentId="@ViewBag.DepartmentId" class="btn btn-success mb-3">
        📝 Request a New Consultation
    </a>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var consultation in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5>📝 @consultation.Question</h5>
                        <a asp-action="Responses" asp-route-id="@consultation.Id" class="btn btn-info btn-sm mt-2">
                            📄 View Replies
                        </a>
                    </div>
                    <div>
                        <a asp-action="EditConsultation" asp-route-id="@consultation.Id" class="btn btn-warning btn-sm">
                            ✏️ Edit
                        </a>
                        <form asp-action="DeleteConsultation" asp-route-id="@consultation.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                🗑 Delete
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No consultations yet.</p>
    }
</div>
